@model Medication

@{
    ViewData["Title"] = "Delete Medication";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation for @Model.Name</h1>
            <h4 class="text-danger text-uppercase">BEWARE!!! This process cannot be undone.</h4>
            <h6 class="text-danger"> Click Confirm to proceed</h6>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DosageForm" class="control-label"></label>
                    <input asp-for="DosageForm" class="form-control" readonly />
                    <span asp-validation-for="DosageForm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Schedule" class="control-label"></label>
                    <input asp-for="Schedule" class="form-control" readonly />
                    <span asp-validation-for="Schedule" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContraIndicationID" class="control-label"></label>
                    <input asp-for="ContraIndicationID" class="form-control" readonly />
                    <span asp-validation-for="ContraIndicationID" class="text-danger"></span>
                </div>
               

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="MedicationID" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Medication" asp-action="Index">Cancel</a>
                </div>

            </div>
        </div>
    </div>
</div>