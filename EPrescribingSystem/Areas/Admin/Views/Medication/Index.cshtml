@using EPrescribingSystem.Models
@*Define Models*@
@model IEnumerable<Medication>
@{
    ViewData["Title"] = "List of Medication";
    Layout = "_Layout";
}

@*Write Code*@
<div class="text-center">
    <h1>Welcome, Here are all the Medication in our system.</h1>
</div>

<br />
<br />
<div class="row">
    <div class="align-items-center mb-4">

        <table id="example" class="display nowrap" style="width:100%">
            <thead>
                <tr>

                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.DosageForm)</th>
                    <th>@Html.DisplayNameFor(model => model.Schedule)</th>
                    <th>@Html.DisplayNameFor(model => model.ActiveIngredient)</th>
                    <th>@Html.DisplayNameFor(model => model.Strength)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.Name)
                            </td>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DosageForm)
                            </td>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Schedule)
                            </td>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Schedule)
                            </td>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ActiveIngredient.Name)
                            </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Strength)
                        </td>
                            <td class="align-middle">
                            <a asp-controller="Medication" asp-action="Edit" asp-route-id="@item.MedicationID" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a asp-controller="Medication" asp-action="Details" asp-route-id="@item.MedicationID" class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                                <a asp-action="Delete" asp-route-id="@item.MedicationID" class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                        </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<div style="position: fixed; right: 25px;" class="text-white">
    <a asp-controller="Medication" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New Medication </a>
</div>