@model List<EPrescribingSystem.Areas.Admin.ViewModel.PharmacyViewModel>
@{
    ViewData["Title"] = "List of Pharmacy";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

@*Write Code*@
<div class="text-center">
    <h1>Welcome, Here are all the Pharmacy in our system.</h1>
</div>

<br />
<br />
<div class="row">
    <div class="align-items-center mb-4">

        <table id="example" class="display nowrap" style="width:100%">
            <thead>
                <tr>
@*                    <th>@Html.DisplayNameFor(model => model.LicenseNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Address1)</th>
                    <th>@Html.DisplayNameFor(model => model.Suburb)</th>
                    <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>*@
                    <th>Licence Number</th>
                    <th>Name</th>
                    <th>Address Line 1</th>
              @*      <th>Address Line 2</th>*@
                    <th>Suburb</th>
                    <th>Contact Number</th>
                    <th>Email Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.LicenseNumber)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.AddressLine1)
                        </td>
                   @*     <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.AddressLine2)
                        </td>*@
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.SuburbName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td class="align-middle">
                            <a asp-controller="Pharmacy" asp-action="Edit" asp-route-id="@item.PharmacyID" class="btn btn-outline-primary"><i class="fas fa-pencil-alt"></i> Edit </a> |
                            <a asp-controller="Pharmacy" asp-action="Details" asp-route-id="@item.PharmacyID" class="btn btn-outline-info"><i class="fas fa-eye"></i> Details </a> |
                            <a asp-action="Delete" asp-route-id="@item.PharmacyID" class="btn btn-danger text-white"><i class="fas fa-trash-alt"></i> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<div style="position: fixed; right: 25px;" class="text-white">
    <a asp-controller="Pharmacy" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New Pharmacy </a>
</div>

<script type="text/javascript">
    function openSuccessModal(strMessage) {
        var myDiv = document.getElementById("MyModalSuccessAlertBody");
        myDiv.innerHTML = strMessage;
        $('#myModalSuccess').modal('show');

        window.setTimeout(function () {
            $('#myModalSuccess').modal('hide');
        }, 3000);
    }

    $(document).ready(function () {
        var msg = "@TempData["SuccessMessage"]";

        if (msg) {
            openSuccessModal(msg);
        }

        //debugger;
    });
</script>

<script>
    $(document).ready(function () {
        $('.navbar-dark').find('[href="' + window.location.pathname + '"]').parent().addClass('active')
    });
</script>