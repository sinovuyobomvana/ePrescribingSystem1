@using EPrescribingSystem.Models
@*Define Models*@
@model IEnumerable<MedicalPractice>
@{
    ViewData["Title"] = "List of Medical Practices";
    Layout = "_Layout";
}

@*Write Code*@
<div class="text-center">
    <h1>Welcome, Here are all the Medical Practices in our system.</h1>
</div>

<br />
<br />
<div class="row">
    <div class="align-items-center mb-4">

        <table id="example" class="display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PracticeNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Address1)</th>
                    <th>@Html.DisplayNameFor(model => model.Address2)</th>
                    <th>@Html.DisplayNameFor(model => model.Suburb)</th>
                    <th>@Html.DisplayNameFor(model => model.ContactNum)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.PracticeNumber)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Address1)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Address2)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Suburb.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ContactNum)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td class="align-middle">
                            <a asp-controller="MedicalPractice" asp-action="Edit" asp-route-id="@item.MedicalPracticeID" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a asp-controller="MedicalPractice" asp-action="Details" asp-route-id="@item.MedicalPracticeID" class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                            <a asp-action="Delete" asp-route-id="@item.MedicalPracticeID" class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<div style="position: fixed; right: 25px;" class="text-white">
    <a asp-controller="MedicalPractice" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New Practice </a>
</div>