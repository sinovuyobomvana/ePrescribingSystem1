@using EPrescribingSystem.Models
@*Define Models*@
@model IEnumerable<MedicalPractice>
@{
    ViewData["Title"] = "List of Medical Practices";
    Layout = "_Layout";
}



    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

@*Write Code*@
<div class="text-center">
    <h1>Medidical Practice Records</h1>
</div>

<br />
<br />
<div class="row">
    <div class="align-items-center mb-4">
        <div class="table-responsive-sm">
        <table id="example" class="display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PracticeNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Address1)</th>
                    <th>@Html.DisplayNameFor(model => model.Address2)</th>
                    <th>@Html.DisplayNameFor(model => model.Suburb)</th>
                    <th>@Html.DisplayNameFor(model => model.ContactNum)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.PracticeNumber)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Address1)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Address2)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Suburb.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ContactNum)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td class="align-middle">
                            <a asp-controller="MedicalPractice" asp-action="Edit" asp-route-id="@item.MedicalPracticeID" class="btn btn-outline-primary"><i class="fas fa-pencil-alt"></i> Edit </a> |
                            <a asp-controller="MedicalPractice" asp-action="Details1" asp-route-id="@item.MedicalPracticeID" class="btn btn-outline-info"><i class="fas fa-eye"></i> Details </a> |
                            <a asp-action="Delete" asp-route-id="@item.MedicalPracticeID" class="btn btn-danger text-white"><i class="fas fa-trash-alt"></i> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        </div>
    </div>
</div>

<div style="right: 25px;" class="text-white">
    <a asp-controller="MedicalPractice" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New Practice </a>
</div>

@section Scripts{
    <script type="text/javascript">
        function openSuccessModal(strMessage){
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');

            window.setTimeout(function (){
                $('#myModalSuccess').modal('hide');
            }, 3000);
        }

        $(document).ready(function () {
           var msg = "@TempData["SuccessMessage"]";

           if(msg)
           {
                openSuccessModal(msg);
           }

            //debugger;
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.navbar-dark').find('[href="' + window.location.pathname + '"]').parent().addClass('active')
        });
    </script>
}

