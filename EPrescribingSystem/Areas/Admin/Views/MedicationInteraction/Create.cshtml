@model EPrescribingSystem.Models.MedicationInteraction

@{
    ViewData["Title"] = "Create";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add new Medication Interactions</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActiveIngredientID" class="control-label"></label>
                <select asp-for="ActiveIngredientID" class ="form-control" asp-items="ViewBag.ActiveIngredientID"></select>
            </div>
           
            <div class="form-group">
                <label asp-for="ActID" class="control-label"></label>
                <select asp-for="ActID" asp-items="ViewBag.ActiveIngredientID" class="form-control">
                    <option value="" selected>Select Active ingrediant...</option>
                </select>
                <span asp-validation-for="ActID" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="MedicationInteraction" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
 </div>
</div>


