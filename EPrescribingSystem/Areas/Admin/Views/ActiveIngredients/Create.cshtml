@model EPrescribingSystem.Models.ActiveIngredient

@{
    ViewData["Title"] = "Create";
    
}

<div class="row text">
    <div class="col-md-8 offset-2">
<h1 style="text-align: center;">Add New Active Ingredient</h1>

<hr />
    <div style="margin: auto;" class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
                <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="ActiveIngredients" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>



