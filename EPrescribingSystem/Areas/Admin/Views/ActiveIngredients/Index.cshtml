@model IEnumerable<EPrescribingSystem.Models.ActiveIngredient>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<h1 style="text-align: center;">Active Ingredients</h1>

<br />
<div class="row">
    <div class="align-items-center mb-4">
        <div class="table-responsive-sm">
 <table id="example" class="display nowrap" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-controller="ActiveIngredients" asp-action="Edit" asp-route-id="@item.ActiveIngredientID" class="btn btn-outline-primary">Edit</a> |
                 <a asp-controller="ActiveIngredient" asp-action="Details" asp-route-id="@item.ActiveIngredientID" class="btn btn-outline-info"><i class="fas fa-eye"></i>Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActiveIngredientID" class="btn btn-danger text-white"><i class="fas fa-trash-alt"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
        </div>

    </div>
</div>

<div style="position: fixed; right: 25px;" class="text-white">
    <a asp-area="Admin" asp-controller="ActiveIngredients" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New Active Ingredient</a>
</div>
